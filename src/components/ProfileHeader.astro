---
interface Props {
  name: string;
  tagline: string;
  githubUsername?: string;
}

const { name, tagline, githubUsername } = Astro.props;
const avatarUrl = githubUsername ? `https://github.com/${githubUsername}.png` : null;
const initials = name.split(' ').map(n => n[0]).join('');
---

<header class="flex flex-col items-center gap-5 text-center opacity-0 animate-fade-in md:flex-row md:text-left md:gap-6">
  <div class="relative shrink-0">
    {avatarUrl ? (
      <img 
        src={avatarUrl} 
        alt={name}
        width={80}
        height={80}
        class="w-20 h-20 rounded-[10px] border-2 border-border object-cover transition-all duration-300 hover:border-accent hover:scale-105"
      />
    ) : (
      <div class="w-20 h-20 rounded-[10px] bg-gradient-to-br from-surface-elevated to-surface-hover border-2 border-border flex items-center justify-center transition-all duration-300 hover:border-accent hover:scale-105">
        <span class="font-display text-2xl font-bold text-text-primary tracking-tight">{initials}</span>
      </div>
    )}
  </div>
  
  <div class="flex flex-col gap-1">
    <h1 class="font-display text-[1.75rem] md:text-[2rem] font-bold text-text-primary tracking-tight leading-tight m-0">{name}</h1>
    <p class="font-mono text-sm text-text-secondary m-0 tracking-wide">{tagline}</p>
  </div>
</header>
