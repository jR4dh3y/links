---
import { Github, Linkedin, Twitter, Mail } from '@lucide/astro';

interface SocialLinkData {
  href: string;
  label: string;
  icon: 'github' | 'linkedin' | 'twitter' | 'mail';
}

interface Props {
  links: SocialLinkData[];
}

const { links } = Astro.props;

const iconMap = {
  'github': Github,
  'linkedin': Linkedin,
  'twitter': Twitter,
  'mail': Mail,
};
---

<nav class="social-links" aria-label="Social media links">
  <ul class="social-list">
    {links.map((link, index) => {
      const IconComponent = iconMap[link.icon];
      return (
        <li class="social-item" style={`animation-delay: ${0.4 + index * 0.05}s`}>
          <a 
            href={link.href}
            target={link.icon === 'mail' ? '_self' : '_blank'}
            rel={link.icon === 'mail' ? undefined : 'noopener noreferrer'}
            class="social-link"
            aria-label={link.label}
            title={link.label}
          >
            <IconComponent size={20} stroke-width={1.5} />
          </a>
        </li>
      );
    })}
  </ul>
</nav>

<style>
  .social-links {
    opacity: 0;
    animation: fade-in 0.5s ease-out 0.5s forwards;
  }

  .social-list {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  @media (min-width: 768px) {
    .social-list {
      justify-content: flex-start;
      gap: 0.75rem;
    }
  }

  .social-item {
    opacity: 0;
    animation: fade-in 0.4s ease-out forwards;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 10px;
    background: transparent;
    border: 1px solid var(--color-border);
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: 
      background-color var(--transition-fast),
      border-color var(--transition-fast),
      color var(--transition-fast),
      transform var(--transition-smooth);
  }

  .social-link:hover {
    background: var(--color-surface-elevated);
    border-color: var(--color-border-hover);
    color: var(--color-text-primary);
    transform: translateY(-2px);
  }

  .social-link:active {
    transform: translateY(0);
  }

  /* Platform-specific hover colors */
  .social-link[aria-label="GitHub"]:hover {
    border-color: #6e5494;
    color: #c9b1ff;
  }

  .social-link[aria-label="LinkedIn"]:hover {
    border-color: #0a66c2;
    color: #5aa7ff;
  }

  .social-link[aria-label="X"]:hover {
    border-color: #536471;
    color: #e7e9ea;
  }

  .social-link[aria-label="Email"]:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  @media (min-width: 768px) {
    .social-link {
      width: 44px;
      height: 44px;
    }
  }
</style>
