---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Radhey Kalra',
  description = 'Developer, gamer, and creator. Find all my links and profiles in one place.'
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    
    <!-- Preconnect to external domains for faster loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://github.com" crossorigin />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net" />
    <link rel="dns-prefetch" href="https://github.com" />
    
    <!-- Fonts - Cascadia Code (main) + Syne (name only) -->
    <link href="https://fonts.googleapis.com/css2?family=Syne:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    
    <!-- Favicons -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative overflow-hidden font-display bg-surface-dark text-text-primary h-dvh leading-relaxed antialiased">
    <!-- Background layer 1 -->
    <div 
      class="fixed inset-0 bg-cover bg-center blur-[8px] scale-105 pointer-events-none z-0"
      style="background-image: url('/bg2.jpg');"
      aria-hidden="true"
    ></div>
    
    
    <!-- Dark overlay for readability -->
    <div 
      class="fixed inset-0 bg-surface-dark/70 pointer-events-none z-0"
      aria-hidden="true"
    ></div>
    
    <!-- Checkbox grid pattern overlay -->
    <div 
      class="fixed inset-0 pointer-events-none z-0 opacity-60"
      style="background-image: linear-gradient(rgba(220,217,231,0.06) 1px, transparent 1px), linear-gradient(90deg, rgba(220,217,231,0.06) 1px, transparent 1px); background-size: 20px 20px;"
      aria-hidden="true"
    ></div>
    
    <!-- Content layer -->
    <div class="relative z-10 h-full overflow-auto">
      <slot />
    </div>
  </body>
</html>
